@model DashboardCounts
@using SIS.Services
@inject IAccountService AccountService

@{
    var user = await AccountService.GetCurrentUserProfileAsync();
    var role = await AccountService.GetCurrentUserRoleAsync();
}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@if (User.IsInRole("Manager"))
{
    <div class="row">
        <div class="col-xl-6 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Departments</h6>
                            <h3>@Model.Departments</h3>
                        </div>
                        <div class="db-icon">
                            <img src="~/assets/img/icons/dash-icon-03.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Students</h6>
                            <h3>@Model.Students</h3>
                        </div>
                        <div class="db-icon">
                            <img src="~/assets/img/icons/dash-icon-01.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Instructors</h6>
                            <h3>@Model.Instructors</h3>
                        </div>
                        <div class="db-icon">
                            <img src="~/assets/img/icons/dash-icon-01.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Courses</h6>
                            <h3>@Model.Courses</h3>
                        </div>
                        <div class="db-icon">
                            <img src="~/assets/img/icons/teacher-icon-02.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Sections</h6>
                            <h3>@Model.Sections</h3>
                        </div>
                        <div class="db-icon">
                            <img src="~/assets/img/icons/teacher-icon-01.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h3>Welcome @(user.FirstName + " " + user.LastName)</h3>
                        </div>
                        <div class="db-icon">
                            <img src="~/assets/img/icons/dash-icon-01.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
